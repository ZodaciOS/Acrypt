            <true/>
            <key>icon</key>
            <string>faceid.png</string>
            <key>requires</key>
            <string>enabled == 1</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>label</key>
            <string>Enable Touch ID</string>
            <key>key</key>
            <string>useTouchID</string>
            <key>default</key>
            <true/>
            <key>icon</key>
            <string>touchid.png</string>
            <key>requires</key>
            <string>enabled == 1</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>label</key>
            <string>Passcode Fallback</string>
            <key>key</key>
            <string>usePasscode</string>
            <key>default</key>
            <true/>
            <key>icon</key>
            <string>passcode.png</string>
            <key>requires</key>
            <string>enabled == 1</string>
        </dict>

        <!-- App Management -->
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>App Management</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSLinkCell</string>
            <key>label</key>
            <string>Select Locked Apps</string>
            <key>detail</key>
            <string>PSListItemsController</string>
            <key>key</key>
            <string>lockedApps</string>
            <key>icon</key>
            <string>apps.png</string>
            <key>isController</key>
            <true/>
        </dict>

