        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Authentication Methods</string>
            <key>footerText</key>
            <string>Requires Face ID/Touch ID-capable device</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>label</key>
            <string>Enable Face ID</string>
            <key>key</key>
            <string>useFaceID</string>
