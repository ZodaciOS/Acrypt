        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>footerText</key>
            <string>Acrypt v1.0 · Developed by ZodaciOS · Powered by ElleKit</string>
            <key>footerAlignment</key>
            <integer>1</integer> <!-- Center aligned -->
